.menu
  position fixed
  z-index 2
  &__open
    -webkit-appearance none
    -moz-appearance none
    border none
    background none
    float right
    width 2.4vw
    position fixed
    padding-top 2.55vw
    right 5vw
  &__open-img
    width 100%
  &__overlay
    min-height 100%
    width 100%
    position fixed
    z-index 1
    top 0
    left 100%
    background-color #b1d9e5
    transition 0.5s
    overflow auto
  &__close
    -webkit-appearance none
    -moz-appearance none
    border none
    position absolute
    background none
    padding-top 2.55vw
    width 2.4vw
    right 5vw
    z-index 3
  &__close-img
    width 100%
  &__overlay-content
    position relative
    top 0
    bottom 0
    width 100%
    text-align center
    margin-top 30px
    padding-bottom 100px
    overflow auto
  &__item
    display block
    width 31vw
    margin 0 auto
    position relative
    margin-top 3.7vw
    letter-spacing 0.1vw
    &_small
      margin-top 0.3vw
  &__link
    padding 8px
    text-decoration none
    font-size 2.9vw
    color #fff
    display inline
    transition 0.3s
    font-family 'Geomanist'
    font-weight 700
    &_sub
      font-size 30px
      font-weight 100
  &__item_big:hover, &__item_big:focus
    &:after
      content ""
      display block
      position absolute
      top -1.2vw
      left 0
      background-image url("../img/bracket.png")
      background-size cover
      width 1.9vw
      height 5.3vw
    &:before
      content ""
      display block
      position absolute
      top -1.2vw
      right 0
      background-image url("../img/bracket.png")
      transform rotateY(180deg)
      background-size cover
      width 1.9vw
      height 5.3vw
  &__item_small:hover, &__item_small:focus
    &:after
      content ""
      display block
      position absolute
      top 0
      left 0
      background-image url("../img/bracket.png")
      background-size cover
      width 1vw
      height 3vw
    &:before
      content ""
      display block
      position absolute
      top 0
      right 0
      background-image url("../img/bracket.png")
      transform rotateY(180deg)
      background-size cover
      width 1vw
      height 3vw

@media screen and (max-width: 1023px)
  .menu
    &__open
      width 40px
      padding-top 25px
      right 25px
    &__close
      width 40px
      padding-top 25px
      right 25px
    &__item
      width 100%
      margin-top 30px
      &_small
        margin-top 10px
    &__link
      font-size 25px
      &_main
        font-size 35px