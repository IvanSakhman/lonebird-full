.wedo
  display block
  width 100%
  font-family 'Geomanist'
  &__container
    margin-top 190px
  &__name
    text-align center
    font-size 21px
    font-weight 700
    margin-bottom 32px
  &__item
    text-align center
    font-size 21px
    font-weight 300
    line-height 60px
  &__footer
    text-align center
    font-size 16px
    font-weight 400
    line-height 60px
    margin-top 30px
    font-family 'Gabriela'

@media screen and (max-width: 1023px)
  .wedo
    &__container
      margin-top 70px
    &__name
      margin-bottom 20px
    &__item
      line-height 30px
      font-size 16px
    &__footer
      line-height 28px
      width 80vw
      margin 20px auto 0