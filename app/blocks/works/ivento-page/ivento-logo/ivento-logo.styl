.ivento-logo
  width 100%
  background-color #fff
  position relative
  &__container
    padding-top 77px
  &__infinity
    width 52px
    margin 0 auto
    display block
  &__name
    color #343434
    font-family 'BerlinSansFB-Reg'
    font-size 30px
    text-align center
    margin-top 155px
    letter-spacing 1px
  &__text
    text-align justify
    font-family "Gabriola"
    color #343434
    font-size 24px
    font-weight 400
    width 537px
    margin 34px auto 0
    line-height 28px
    -moz-text-align-last center
    text-align-last center
  &__lonebird
    font-family "NellaSueDemo"
    margin-right 10px
  &__logo-big
    width 809px
    height 809px
    display block
    margin 110px auto 0
  &__desc
    position absolute
    font-family "Gabriola"
    color #111011
    font-size 24px
    font-weight 400
    text-align center
    bottom 393px
    right 17%
    line-height 29px
    width 232px

@media screen and (max-width: 1940px)
  .ivento-logo
    &__logo-big
      width 600px
      height 600px
    &__desc
      bottom 35px

@media screen and (max-width: 1440px)
  .ivento-logo
    &__logo-big
      width 600px
      height 600px
    &__desc
      bottom 0
      right 6.5%

@media screen and (max-width: 1023px)
  .ivento-logo
    &__text
      width 75vw
    &__name
      margin-top 100px
    &__logo-big
      width 400px
      height 400px
      margin-top 80px
    &__desc
      bottom -9%

@media screen and (max-width: 767px)
  .ivento-logo
    &__container
      padding-top 50px
    &__name
      margin-top 80px
    &__logo-big
      width 300px
      height 300px
      margin-top 40px
    &__desc
      position static
      width 75vw
      margin 30px auto 0

@media screen and (max-width: 424px)
  .ivento-logo
    &__name
      margin-top 60px
    &__logo-big
      width 280px
      height 280px