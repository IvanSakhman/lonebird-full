.ferte
  display block
  width 100%
  background-image url("../img/ferte.jpg")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    opacity 0.3
    background-color #d7e0e3
    position absolute
  &__title
    color white
    font-family 'Loaded'
    font-size 36px
    font-weight 400
    position absolute
    letter-spacing 0.1vw
    top 44%
    left -14%
    width 100%
  &__block
    float right
    width 310px
    margin 19.8vw 19.6vw 0 0
  &__item
    background-color #000a0d
    color #efeff0
    font-family "Courier  New"
    font-size 12px
    font-weight 400
    padding 12px 7px
    display inline-block
    float right
    letter-spacing 2.9px
    margin-top 6px

@media screen and (max-width: 1023px)
  .ferte
    height 350px
    &__wrapper
      width 100%
      position static
    &__container
      display none
    &__title
      position static
      text-align center
      padding-top 100px
    &__block
      width 45%
      float none
      margin 150px auto 0
      height 100px

@media screen and (max-width: 767px)
  .ferte
    &__block
      width 85%