.quirre
  display block
  width 100%
  background-image url("../img/quirre-bg.png")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    opacity 0.45
    background-color #03b8d9
    position absolute
  &__title
    color white
    font-family 'Loaded'
    font-size 36px
    font-weight 400
    position absolute
    letter-spacing 0.1vw
    top 44%
    left -18%
    width 100%
  &__kwirre
    font-size 24px
    font-weight 400
    position relative
    margin-left 1.4%
    &:after
      content "["
      display block
      font-family 'BerlinSansFB-Reg'
      font-size 36px
      position absolute
      top -11px
      left -10px
    &:before
      content "]"
      display block
      font-family 'BerlinSansFB-Reg'
      font-size 36px
      position absolute
      top -11px
      right -10px

@media screen and (max-width: 1023px)
  .quirre
    &__title
      top 34%
      left -17%
      font-size 32px

@media screen and (max-width: 767px)
  .quirre
    &__title
      top 25%
      font-size 26px