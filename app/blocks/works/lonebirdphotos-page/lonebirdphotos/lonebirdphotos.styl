.lonebirdphotos
  display block
  width 100%
  background-image url("../img/lonebirdphotos.jpg")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    background-color #ebfcff
    opacity 0.2
    position absolute
  &__title
    color white
    font-family 'Loaded'
    font-size 1.5vw
    font-weight 400
    position absolute
    letter-spacing 0.2vw
    top 44%
    left -33%

@media screen and (max-width: 1023px)
  .lonebirdphotos
    &__title
      top 34%
      left -75%
      font-size 32px

@media screen and (max-width: 767px)
  .lonebirdphotos
    &__title
      top 25%
      left -80%
      font-size 26px
