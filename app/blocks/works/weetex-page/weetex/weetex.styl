.weetex
  display block
  width 100%
  background-image url("../img/weetex.jpg")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    opacity 0.77
    background-color #03b8d9
    position absolute
  &__title
    color #242632
    font-family 'Loaded'
    font-size 1.4vw
    font-weight 400
    position absolute
    letter-spacing 0.2vw
    top 42%
    left -29%
    width 100%

@media screen and (max-width: 1023px)
  .weetex
    &__title
      top 34%
      left -17%
      font-size 16px

@media screen and (max-width: 767px)
  .weetex
    &__title
      top 25%
      font-size 14px