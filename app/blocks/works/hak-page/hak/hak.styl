.hak
  display block
  width 100%
  background-image url("../img/hak&kak.jpg")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    opacity 0.59
    background-color #08a2db
    position absolute
  &__title
    font-family 'Loaded'
    font-size 36px
    font-weight 400
    position absolute
    letter-spacing 0.1vw
    top 44%
    left -14%
    width 100%
    color #242632
  &__block
    float right
    width 310px
    margin 19.8vw 19.6vw 0 0
  &__item
    background-color #000a0d
    color #efeff0
    font-family "Courier  New"
    font-size 12px
    font-weight 400
    padding 12px 7px
    display inline-block
    float right
    letter-spacing 2.9px
    margin-top 6px

@media screen and (max-width: 1023px)
  .hak
    &__title
      font-size 28px
      top 34%

@media screen and (max-width: 500px)
  .hak
    height 55vw
    &__wrapper
      top 7vw
    &__block
      width 300px
      margin 40px auto 0
      float none
    &__title
      font-size 24px
      left -70%