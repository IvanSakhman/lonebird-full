.interfood
  display block
  width 100%
  background-image url("../img/interfood.jpg")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__wrapper
    position relative
    top 15.8vw
    left 37.3vw
    width 22.5vw
    height 9.7vw
  &__container
    width 100%
    height 100%
    opacity 0.77
    background-color #f4fbfd
    position absolute
  &__title
    color #242632
    font-family 'Loaded'
    font-size 1.4vw
    font-weight 400
    position absolute
    letter-spacing 0.2vw
    top 42%
    left -29%
    width 100%
    opacity 0.77

@media screen and (max-width: 767px)
  .interfood
    &__title
      font-size 26px
      left -60%

@media screen and (max-width: 500px)
  .interfood
    &__title
      font-size 24px
      left -90%